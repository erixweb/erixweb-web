---
import Article from "~/components/Article.astro";
import Articles from "~/components/Articles.astro";
import Header from "~/components/Header.astro";
import CataloniaFlag from "~/components/Icons/CataloniaFlag.astro";
import EnglishFlag from "~/components/Icons/EnglishFlag.astro";
import SpainFlag from "~/components/Icons/SpainFlag.astro";
import Project from "~/components/Project.astro";
import Projects from "~/components/Projects.astro";
import Skill from "~/components/Skill.astro";
import Skills from "~/components/Skills.astro";
import PageLayout from "~/layouts/PageLayout.astro";
---

<PageLayout>
	<Header />
	<main class="p-[16px] w-full max-w-[50em]">
		<section class="pb-[40px]">
			<h1 class="text-[25px] font-bold">
				Lenguas
			</h1>
			<div class="grid grid-cols-3 gap-[20px]">
				<Skill 
					name="Castellano"
				>
					<SpainFlag />
				</S>
				<Skill 
					name="Català"
				>
					<CataloniaFlag 
						width={1260}
					/>
				</Skill>
				<Skill 
					name="English"
				>
					<EnglishFlag />
				</Skill>
			</div>
		</section>
		<h1 class="text-[25px] font-bold">
			Tecnologías
		</h1>
		<Skills />
		<Projects>
			<Project
				image="/images/svelte-bazar.webp"
				name="Svelte Bazar"
				description="Un bazar hecho con SvelteKit."
				web="https://svelte-bazar.vercel.app"
				github="https://github.com/erixweb/svelte-bazar"
			/>
			<Project
				image="/images/windful.webp"
				name="WindfulCSS"
				description="Librería de CSS basada en Tailwind para estilar en línea."
				web="https://windful.vercel.app"
				github="https://github.com/erixweb/windfulcss"
			/>
			<Project
				image="/images/lista-libros.webp"
				name="Lista de Libros"
				description="Aplicación web hecha con Astro y Svelte de una lista de libros."
				web="https://libros-lista.vercel.app"
				github="https://github.com/erixweb/book-list"
			/>
			<Project
				image="/images/tempsbdn.webp"
				name="TempsBDN"
				description="Aplicación web & desktop para ver el clima en Badalona."
				web="https://tempsbdn.vercel.app"
				github="https://github.com/erixweb/tempsbdn"
			/>
		</Pro>
		<Articles>
			<Article
				title="Svelte es increíble"
				date="26/08/23"
				href="/articulos/svelte-es-increible"
				type="typescript"
			/>
			<Article
				title="TS para desarolladores JS"
				date="13/08/23"
				href="/articulos/ts-para-js-devs"
				type="typescript"
			/>
			<Article
				title="SSR en Web Components"
				date="14/07/23"
				href="/articulos/ssr-web-components"
				type="javascript"
			/>
		</Articles>
	</main>
</P>
