---
import Navigation from '~/components/Navigation.astro'
import '~/styles/index.css'

const { frontmatter } = Astro.props
const { img, title, desc } = frontmatter
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Erik</title>
		<link rel="icon" href="/images/erik.webp" />

		<link
			rel="preload"
			href="/fonts/poppinsnormal.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<link
			rel="preload"
			href="/fonts/poppins-bold2.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>
		<script src="/scripts/view.js" type="module" defer></script>
		<script src="/scripts/lazy.js" type="module" defer></script>
	</head>
	<body>
		<Navigation />
		<header class="article-header">
			<img data-src={img} alt="" />
			<div class="content">
				<h2>
					{title}
				</h2>
				<p>
					{desc}
				</p>
			</div>
		</header>
		<main style="margin-top: 60px;">
			<slot />
		</main>
	</body>
</html>
