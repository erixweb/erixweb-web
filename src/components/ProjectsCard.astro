---
import projects from "../../store/projects"

interface Props {
    slice: number;
}
const { slice } = Astro.props

---
<style is:inline>
    .projects {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }
    
    .projects a.project {
        text-decoration: none;
        color: black;
    }
    
    .project {
        position: relative;
        transition: 250ms;
        background-color: #ededed;
    
        box-shadow: 1px 1px 1px rgba(218, 218, 218, 0.485);
        padding-bottom: 16px;
        border-radius: 7px;
        max-width: 350px;
        width: 100%;
        min-height: 100%;
        height: 100%;
        margin-top: 0px;
        margin-bottom: 20px;
    }
    
    .project:hover {
        transform: scale(1.1);
        box-shadow: 1px 1px 50px rgba(171, 171, 171, 0.26);
    }
    
    .project p,
    .project h3 {
        padding-left: 1.5vmin;
        padding-right: 1.5vmin;
        width: 100%;
        margin-left: 0px;
    }
    
    .project h3 {
        font-size: 24px;
    }
    
    .project img {
        aspect-ratio: 16/8;
        object-fit: fill;
        border-top-right-radius: 7px;
        border-top-left-radius: 7px;
        height: 100%;
        max-height: 240px;
        width: 100%;
    }
</style>
<section class="projects">
    <h2>
        Proyectos
    </h2>
    {projects.slice(0, slice).map(project => (
            <a class="project" href={project.url} target="_blank">
                <img data-src={project.image} alt={`Imagen de el proyecto ${project.name}`} loading="lazy">
                <div>
                    <h3>
                        {project.name}   
                    </h3>
                    <p>
                        {project.desc}
                    </p>
                </div>
            </a>
    ))}
</section>
{slice == 4 ? 
    <div>
        <a href="/proyectos" class="showmore">Ver m√°s</a>
    </div>
    :
    ""
}