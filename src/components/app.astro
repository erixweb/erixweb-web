import Experience from "~/components/Experience.astro"
import FactoryIcon from "~/components/icons/factory-icon.astro"
import User from "~/components/icons/user.astro"
import Keyword from "~/components/keyword.astro"

import NetherlandsFlag from "~/components/icons/netherlands-flag.astro"
export interface Props {
	language: string
}
const { language } = Astro.props
const i18n = await import(`../i18n/${language || "ca"}.json`)
