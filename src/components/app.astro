---
import Header from "~/components/Header.astro"
import PageLayout from "~/layouts/PageLayout.astro"

import CataloniaFlag from "~/components/icons/catalunya-icon.astro"
import EnglishFlag from "~/components/icons/english-icon.astro"
import LanguageIcon from "~/components/icons/language-icon.astro"
import ProjectsIcon from "~/components/icons/projects-icon.astro"
import SpainFlag from "~/components/icons/spain-flag.astro"
import TechnologyIcon from "~/components/icons/technology-icon.astro"
import Project from "~/components/Project.astro"
import Projects from "~/components/Projects.astro"
import Skill from "~/components/Skill.astro"
