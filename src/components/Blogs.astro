---
import blogs from "../../store/blogs";
---
<style is:inline>
    .article {
        margin-left: 0px;
        display: flex;
        flex-direction: row;
        gap: 20px;
        margin-top: 10px;
        color: #000;
        text-decoration: none;
    }
    .article img {
        width: 48px;
        height: 48px;
        vertical-align: middle;
    }
    .article p {
        margin-top: 0px;
    }
    .article div:nth-child(1) {
        width: 48px;
        height: 48px;
    }
</style>
<section id="articulos">
    {blogs.map(blog => (
        <a class="article" href={blog["url"]}>
            <div class="blog-image">
                <img data-src={blog["image"]} alt={`Imagne del artÃ­culo ${blog["title"]}`}>    
            </div>
            <div class="blog-content">
                <h3>
                    {blog["title"]}
                </h3>
                <p>
                    {blog["date"]}    
                </p>
            </div>    
        </a>
    ))}
</section>