---
import JavaScriptIcon from './icons/javascript-icon.astro'
import TSIcon from './icons/typescript-icon.astro';

interface Props {
    type: string,
    title: string,
    date: string,
    href: string
}

const {  
    type,
    title,
    date,
    href
} = Astro.props


---

<a href={href} class="article">
    <div class="image">
        {
            type === 'javascript' ? 
                <JavaScriptIcon />
            :
            type === 'typescript' ? 
                <TSIcon />
            :
            <TSIcon />
            
        }
    </div>
    <div class="info">
        <h3 class="font-semibold">
            {title}
        </h3>
        <small class="text-[16px] text-zinc-400">
            {date}
        </small>
    </div>
</a>

